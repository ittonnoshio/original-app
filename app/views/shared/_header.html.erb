<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='title'>
    <h1>
      <%= link_to 'PAPPA', root_path %>
    </h1>
  </div>

  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to "#{current_user.nickname}さん", "/users/#{current_user.id}", class: "user-nickname" %></li>
        <li><%= link_to 'マイページ', "/users/#{current_user.id}", class: "user-page"%></li>
        <li><%= link_to '投稿する', new_post_path, class: "new-post"%></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"%></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>