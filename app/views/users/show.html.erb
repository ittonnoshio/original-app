<%= render "shared/header" %>

<div>
  <div>
    <h3><%= "#{@user.nickname}さん" %></h3>
  </div>
  <div>
    <h3>投稿したもの</h3>
  </div>

  <% @posts.each do |post| %>
    <div>
      <h3><%= post.title %></h3>
    </div>
    <div>
      <%= link_to post_path(post.id), method: :get do %>
        <div>
          <%= image_tag post.image.variant(resize: '500x500'), class: "post-img" if post.image.attached? %>
        </div>
      <% end %>
    </div>
    <div>
      <h3><%= post.created_at %></h3>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>